print(bool_value)

#ödev2
alice_age = 30
bob_age = 25
charlie_age = 35
  if alice_age > bob_age and alice_age > charlie_age:
    print("Alice en yaşlı.")
elif bob_age > alice_age and bob_age > charlie_age:
    print("Bob en yaşlı.")
elif charlie_age > alice_age and charlie_age > bob_age:
    print("Charlie en yaşlı.")
else:
    print("En yaşlı kişi belirlenemedi.")

  # Mantıksal operatörler ile karşılaştırma
if bob_age < alice_age or bob_age < charlie_age:
    print("Bob en genç.")
elif alice_age == bob_age == charlie_age:
    print("Hepsi aynı yaşta.")
else:
    print("Bob en genç değil veya yaşları eşit değil.")

  #ödev3
num1 = float(input("Birinci sayıyı girin: "))
num2 = float(input("İkinci sayıyı girin: "))

# Toplama işlemi
toplam = num1 + num2
print("Toplama sonucu:", toplam)
  # Çıkarma işlemi
fark = num1 - num2
print("Çıkarma sonucu:", fark)

# Çarpma işlemi
carpim = num1 * num2
print("Çarpma sonucu:", carpim)

# Bölme işlemi
# Sıfıra bölme hatasını önlemek için kontrol ekleyelim
if num2 != 0:
    bolum = num1 / num2
    print("Bölme sonucu:", bolum)
else:
    print("Sıfıra bölme hatası!")

  #ödev4
isim = input("İsminizi girin: ")
yas = input("Yaşınızı girin: ")
sehir = input("Şehrinizi girin: ")
meslek = input("Mesleğinizi girin: ")

# Alınan bilgilerin ekrana yazdırılması
print("\nGirdiğiniz bilgiler:")
print("İsim:", isim)
print("Yaş:", yas)
print("Şehir:", sehir)
print("Meslek:", meslek)

  #ödev5
ifade = "Hi-Kod Veri Bilimi Atölyesi"
kelimeler = ifade.split()
buyuk_harf = ifade.upper()
kucuk_harf = ifade.lower()
print("Seçilen kelimeler:", kelimeler)
print("Tüm harfleri büyük hale çevrilen ifade:", buyuk_harf)
print("Tüm harfleri küçük hale çevrilen ifade:", kucuk_harf)
sayi_ifade = "0123456789"
cift_sayilar = sayi_ifade[::2] 
tek_sayilar = sayi_ifade[1::2]  
print("Çift sayılar:", cift_sayilar)
print("Tek sayılar:", tek_sayilar)
